@{
    ViewBag.Title = "Slide Little Greene";
}

        

        <script type="text/javascript">
            $(document).ready(function () {
                var timer, last;
                var i = 1;
                var limit = $("#bannerImgLG li").size();
                var active = true;

                animate(i, 4000);

                function animate(i, last, time) {
                    timer = setTimeout(function () {
                        i = doBanner(i);
                        last = i;
                        if (i > limit - 1) { i = 0; }
                        i++;
                        animate(i, last, 5000);
                    }, time);
                }

                function doBanner(i) {
                    $("#bannerImgLG li:visible").hide();
                    $("#bannerTextLG li:visible div").hide();
                    $("#bannerImgLG li:nth-child(" + i + ")").show();

                    $("#bannerTextLG li:nth-child(" + i + ") div").show(200);
                    return i;
                }

                $("#bannerTextLG li").click(function () {
                    i = (parseInt($(this).attr('id').substr(3, 3)));
                    if (active) {
                        clearTimeout(timer);
                        doBanner(i);
                        active = false;
                    } else {
                        animate(i, 5000);
                        active = true;
                    }
                });

            });

        </script>

