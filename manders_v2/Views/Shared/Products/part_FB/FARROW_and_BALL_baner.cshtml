                   <div class="caption ui-corner-all" style="bottom:0">
						<p>	<a href="@Url.Action("FARROW_and_BALL_wallpaper", "Products")">Обои Farrow & Ball</a></p>
						</div>
                </div>
                <div class="slide">
                    
                    <a href="@Url.Action("FARROW_and_BALL_catalog", "Products")"><img src="../../Content/images/FB/slide_fb/new-showroom-colour-wall.jpg" alt="Farrow&Ball" /></a>   
                   <div class="caption ui-corner-all" style="bottom:0">
						<p> <a href="@Url.Action("FARROW_and_BALL_catalog", "Products")">Farrow & Ball Manders Каталог</a></p>
						</div>
